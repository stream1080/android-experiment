<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="用户名"
        android:paddingVertical="5dp"
        android:textSize="30sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:paddingVertical="5dp"
        android:drawableStart="@drawable/user"
        android:drawableTint="#9C27B0"
        android:hint="请输入用户名"
        android:background="@drawable/background_edit" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:paddingVertical="5dp"
            android:textSize="30sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:paddingVertical="5dp"
            android:drawableStart="@drawable/phone"
            android:drawableTint="#9C27B0"
            android:hint="请输入手机号"
            android:background="@drawable/background_edit" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="年   龄"
            android:paddingVertical="5dp"
            android:textSize="30sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:paddingVertical="5dp"
            android:drawableStart="@drawable/age"
            android:drawableTint="#9C27B0"
            android:hint="请输入年龄"
            android:background="@drawable/background_edit" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="性   别"
            android:paddingVertical="5dp"
            android:textSize="30sp"/>
        <RadioGroup
            android:id="@+id/rg_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rd_boy"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="boy"
                android:button="@drawable/button_radio"
                android:background="@drawable/background_radio_button"
                android:paddingVertical="5dp"
                android:textSize="30sp"/>

            <RadioButton
                android:id="@+id/rd_girl"
                android:layout_marginStart="20dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="girl"
                android:button="@drawable/button_radio"
                android:background="@drawable/background_radio_button"
                android:paddingVertical="5dp"
                android:textSize="30sp"/>
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="专业特长"
            android:paddingVertical="5dp"
            android:textSize="30sp"/>

        <CheckBox
            android:id="@+id/ck_basketball"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="篮球"
            android:button="@drawable/button_check_1"
            android:textSize="30sp"/>

        <CheckBox
            android:id="@+id/ck_dance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="舞蹈"
            android:button="@drawable/button_check_1"
            android:textSize="30sp"/>

        <CheckBox
            android:id="@+id/ck_paint"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绘画"
            android:button="@null"
            android:padding="10dp"
            android:background="@drawable/button_check"
            android:textSize="30sp"/>

        <CheckBox
            android:id="@+id/ck_sing"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="唱歌"
            android:button="@null"
            android:padding="10dp"
            android:background="@drawable/button_check"
            android:textSize="30sp"/>

    </LinearLayout>
    <Button
        android:id="@+id/btn_sumbit"
        android:layout_gravity="center"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="提交"
        android:textSize="28sp"/>

</LinearLayout>